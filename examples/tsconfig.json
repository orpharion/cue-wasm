{
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "target": "ES2020",
        "noFallthroughCasesInSwitch": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "strict": true,
        "declaration": true,
    },
    "include": [
        "./src",
        "../src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "external"
    ]
}
